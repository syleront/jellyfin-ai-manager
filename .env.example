# The User ID (UID) and Group ID (GID) to run the container as.
# This ensures that files created by the container (like symlinks and NFOs)
# have the correct ownership on the host system.
# On Linux, you can find your IDs by running `id -u` and `id -g`.
# Default: 1000 (standard for the first non-root user)
UID=1000
GID=1000

# --- LLM Settings (OpenAI-compatible API) ---
# You can use OpenRouter, Perplexity, OpenAI, or any other OpenAI-compatible API.
LLM_API_KEY=your_api_key
LLM_MODEL=perplexity/sonar
LLM_BASE_URL=https://openrouter.ai/api/v1

# TMDB Settings
TMDB_API_KEY=your_tmdb_key

# --- Paths (Inside Container) ---
# IMPORTANT: To ensure hardlinks work correctly in Jellyfin, these paths
# SHOULD MATCH the mount points used in your Jellyfin container.
# Note: Jellyfin MUST have access to MIXED_PATH as well, because the hardlinks
# in the destination folders point to the same underlying data as the files in MIXED_PATH.
MIXED_PATH=/media/mixed
MOVIES_DEST_PATH=/media/movies
SERIES_DEST_PATH=/media/series

# Host Paths
MIXED_PATH_HOST=/path/to/host/mixed
MOVIES_DEST_PATH_HOST=/path/to/host/movies
SERIES_DEST_PATH_HOST=/path/to/host/series

# Jellyfin Settings
JELLYFIN_URL=http://localhost:8096
JELLYFIN_API_KEY=your_jellyfin_api_key
JELLYFIN_MOVIES_LIBRARY_ID=your_movies_library_id
JELLYFIN_SERIES_LIBRARY_ID=your_series_library_id

# Logging
LOG_LEVEL=INFO

